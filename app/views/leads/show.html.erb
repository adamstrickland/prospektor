<div>
	<div id="sidebar">
		<div id="actions" class="menu">
			<span class="name">Actions</span>
			<ul class="menu">
				<li><%= link_to content_tag(:span, 'Next'), user_call_queue_lead_url(current_user, @queue, @lead.next_id) %></li>
				<li><%= link_to_if [:assigned, :queued].include?(@lead.status), content_tag(:span, 'Invite'), new_user_call_queue_lead_presentation_url(current_user, @queue, @lead, :height => 75, :width => 300), :class => 'thickbox' %></li>
				<li><%= link_to_if [:scheduled].include?(@lead.status), content_tag(:span, 'Book'), new_user_call_queue_lead_appointment_url(current_user, @queue, @lead, :height => 600, :width => 400), :class => 'thickbox' %></li>
				<li><%= link_to content_tag(:span, 'Disposition'), new_user_call_queue_lead_disposition_url(current_user, @queue, @lead, :height => 200, :width => 300), :class => 'thickbox' %></li>
				<li><%= link_to content_tag(:span, 'Suspend'), new_user_call_queue_lead_suspend_url(current_user, @queue, @lead, :height => 200, :width => 300), :class => 'thickbox' %></li>
			</ul>
		</div>
		<div id="tools" class="menu">
			<span class="name">Tools</span>
			<ul class="menu">
				<li><%= link_to content_tag(:span, 'Topics'), '#' %></li>
			</ul>
		</div>
	</div>
	<div id="main">
		<div id="lead" class="primary">
			<div id="contact">
				<div id="contact_name" class="h1">
					<%= h @lead.honorific %> <%= h @lead.full_name %>, <%= h @lead.title %>
				</div>
			</div>
			<div id="company">
				<div id="company_name" class="h2"><%= h @lead.company %></div>
				<div id="location">
					<div id="city_state"><%= h @lead.city %>, <%= h @lead.state %> (<%= h timezone_mapping @lead.timezone %> timezone)</div>
					<div id="msa"><%= "(#{h(@lead.msa.strip)})" if @lead.msa %></div>
				</div>
				<div id="sic_info" class="addl_info">
					<div class="section_title">SIC Information</div>
					<div>
						<% (1..5).each do |i| %>
							<% code = @lead.send("sic_code_#{i}") %>
							<% if code and !code.nil? %>
								<div id="sic_<%= i %>" clas="sic">
									<span class="sic_code"><%= h code %></span>
									<span class="sic_desc"><%= h @lead.send("sic_description_#{i}") %></span>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>
				<div id="misc_info" class="addl_info">
					<div class="section_title">Misc. Information</div>
					<div>
						<% 
						{
							'Year Established' => :year_established,
							'Number of PCs' => :number_of_pcs,
							'Emp Code' => :employee_code,
							'Sales Code' => :sales_code,
							'Credit Rating' => :credit_rating
						}.each do |field, attrib| %>
							<% value = @lead.send(attrib)%>
							<% if value and !value.nil? %>
								<div class="misc_item">
									<span class="field"><%= h field %>:</span> <span class="value"><%= h value %></span>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div id="history" class="secondary">
			<div class="title">Lead History</div>
			<% @lead.events.each do |thing| %>
				<%= render :partial => 'events/listing_item', :locals => { :event => thing } %>
			<% end %>
		</div>
	</div>
</div>