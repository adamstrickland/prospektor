<div id="appointment-widget" class="widget">
	<% 
		remote_form_for(
			:appointment,
			@appointment,
			:url => {
				:controller => 'appointments',
				:user_id => current_user,
				:lead_id => @lead,
				# :format => 'xml'
			}, 
			:html => {
				:method => :post
			},
			:success => "$('#history').updateHistoryFromModal(request)",
			:failure => "$('#errors').showErrorsFromModal(request)"
		) do |f|
	-%>
		<div class="widget_item">
			<%= f.label :client_email %>
			<%= f.text_field :client_email %>
		</div>
		<div class="widget_item">
			<%= f.label :expert_email %>
			<%= f.select :expert_email, {
				"Luis Luarca" => "lluarca@trigonsolutions.com",
				"Bill Jones" => "bjones@trigonsolutions.com"
			} %>
		</div>
		<div class="widget_item">
			<%= f.label :subject %>
			<%= f.text_field :subject %>
		</div>
		<div class="widget_item">
			<%= f.label :location %>
			<%= f.text_field :location %>
		</div>
		<div class="widget_item">
			<%= f.label :session_date %>
			<%= f.date_select :session_date %>
		</div>
		<div class="widget_item">
			<%= f.label :session_time %>
			<%= f.time_select :session_time %>
		</div>
		<div class="widget_item">
			<%= f.label :duration %>
			<%= f.text_field :duration %>&nbsp;hours
		</div>
		<div class="widget_item">
			<%= f.label :notes %>
			<%= f.text_area :notes %>
		</div>
		<div class="widget_item">
			<%= f.submit 'Send' %>
		</div>
	<% end %>
</div>