<div id="appointment-widget" class="widget">
	<% 
		remote_form_for(
			:appointment,
			@appointment,
			:url => user_call_queue_lead_appointments_url(current_user, params[:call_queue_id], @lead), 
			:html => {
				:method => :post
			},
			:success => "$('#history').updateHistoryFromModal(request)",
			:failure => "$('#errors').showErrorsFromModal(request)"
		) do |f|
	-%>
		<div class="widget_item">
			<%= f.label :client_email %>
			<%= f.text_field :client_email %>
		</div>
		<div class="widget_item">
			<%= f.label :topic %>
			<%= f.select :topic_id, Topic.find_all_by_complimentary(true, :order => 'number').map{ |t| ["#{t.number.to_s.rjust(2, '0')} - #{t.name}", t.id] } %>
		</div>
		<div class="widget_item">
			<%= f.label :location %>
			<%= f.text_field :location %>
		</div>
		<div class="widget_item">
			<%= f.label :session_date %>
			<%= f.date_select :session_date %>
		</div>
		<div class="widget_item">
			<%= f.label :session_time %>
			<%= f.time_select :session_time %>
		</div>
		<div class="widget_item">
			<%= f.label :duration %>
			<%= f.text_field :duration %>&nbsp;hours
		</div>
		<div class="widget_item">
			<%= f.label :notes %>
			<%= f.text_area :notes %>
		</div>
		<div class="widget_item">
			<%= f.submit 'Send' %>
		</div>
	<% end %>
</div>