<div id="invite-widget" class="widget">
	<% 
		remote_form_for(
			:presentation,
			@presentation,
			:url => user_call_queue_lead_presentations_url(current_user, params[:call_queue_id], @lead), 
			:html => {
				:method => :post
			},
			:success => "$('#history').updateHistoryFromModal(request)",
			:failure => "$('#errors').showErrorsFromModal(request)"
		) do |f|
	-%>
		<div class="widget_item">
			<%= f.label :email %>
			<%= f.text_field :email %>
		</div>
		<div class="widget_item">
			<%= f.label :callback_date %>
			<%= f.date_select :callback_date %>
		</div>
		<div class="widget_item">
			<%= f.label :callback_time %>
			<%= f.time_select :callback_time %>
		</div>
		<div class="widget_item">
			<%= f.submit 'Send' %>
		</div>
	<% end %>
</div>