!!!
%html{ :xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en" }
  %head
    %meta{ "meta-equiv" => "content-type", :content => "text/html;charset=UTF-8" }
    %title Trigon Solutions' Videos
    =stylesheet_link_tag 'reset'
    %style{ :type => "text/css" }=yield :styles
    =render :partial => 'shared/google_analytics'
    %script{ :src => "http://www.google.com/jsapi" }
    -if Rails.env == 'production'
      :javascript
        google.load("jquery", "1.4.2");
    -else
      =javascript_include_tag 'jquery'
    =javascript_include_tag 'jquery.swfobject'
    :javascript
      google.load("swfobject", "2.2");
      
      google.setOnLoadCallback(function(){
        $(function(){
          $('#player').flash({
            swf:'http://www.trigonsolutions.com/videos/BCR200/BCR200.swf',
            allowScriptAccess:'always',
            quality:'high',
            bgcolor:'#000000',
            allowFullScreen:'true',
            height:'100%',
            width:'100%'
          });
        });
      });
  %body{ :topmargin => 0, :leftmargin => 0, :bgcolor => '#000000' }
    #player